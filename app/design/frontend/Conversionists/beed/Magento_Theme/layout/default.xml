<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
    <head>
        <!-- <css src="css/font-awesome.min.css"/> -->
        <css src="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" src_type="url"/>
    </head>
    
    
    <body>
    <referenceBlock name="header.panel" remove="true" />
    <referenceBlock name="navigation.sections" remove="true" />
    <referenceBlock name="minicart" remove="true" />
    <referenceBlock name="top.search" remove="true" />
    <!-- Creating new container reference: Conversionbug START -->
        <referenceContainer name="header-wrapper">
            <block class="Magento\Cms\Block\Block" name="custom_menu_after">
                <arguments>
                    <argument name="block_id" xsi:type="string">custom_menu_after</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="icons">
                <arguments>
                    <argument name="block_id" xsi:type="string">icons</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="custom_menu_after" destination="header-wrapper" after="logo"/>


        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="footers">
                <arguments>
                    <argument name="block_id" xsi:type="string">footers</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="footers" destination="footer" before="copyright"/>
    <!-- Creating new container reference: Conversionbug END -->
    
        
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_img_width" xsi:type="number">150</argument>
                <argument name="logo_img_height" xsi:type="number">63</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="form.subscribe" remove="true"/>
    </body>
</page>
